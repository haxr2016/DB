# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.home

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

GET        /login               controllers.Application.login

GET        /getproduct          controllers.ProductController.getProduct

POST        /addproduct           controllers.ProductController.addProduct

PUT         /updateproduct/:id          controllers.ProductController.update(id: Integer)

DELETE      /deleteproduct/:id          controllers.ProductController.deleteproduct(id: Integer)